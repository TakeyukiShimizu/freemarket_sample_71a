.purchase
  .purchase__head__logo
    = image_tag('logo.svg', :width => '170', :height => '60')

  .purchase__confirm
    .purchase__confirm__title
      %p.message 
        購入内容の確認
    .purchase__product
      .purchase__product__content
        .purchase__product__content__image
          = image_tag('sample1.png', :width => '100', :height => '70')
        .purchase__product__content__info
          %ul
            %li.item__name
              カメラ
            %li.item__price
              ¥1,000 (税込、送料込)
    .purchase__payment
      .purchase__payment__price
        .purchase__payment__price__content
          %p.message
            支払い金額
          .payment__price
            ¥1,000
      .purchase__payment__method
        %p.message
          支払い方法
        %p.message
          クレジットカード決済のみ
      .purchase__shipping
        %p.message
          配送先
        %p.address
          登録して下さい
      .purchase__submit
        %button.purchase-btn
          購入する

    .purchase__end
      .purchase__end__logo
        = image_tag('logo.svg', :width => '170', :height => '60')
        %p © FURIMA